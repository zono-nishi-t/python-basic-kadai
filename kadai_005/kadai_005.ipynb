      "source": [
        "# 台形の寸法（単位：cm）\n",
        "upper_base = 10\n",
        "lower_base = 20\n",
        "height = 5\n",
        "\n",
        "# 台形の面積を計算\n",
        "area = (upper_base + lower_base) * height / 2\n",
        "\n",
        "# 結果を表示\n",
        "print(f\"台形の面積は {area} cm² です。\")\n"
      ]
    }
